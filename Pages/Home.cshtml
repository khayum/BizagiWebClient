@page
@model BizagiWebClient.Pages.HomeModel
@{
    ViewData["Title"] = "Home page";
}

    <div id="divBizagiOdataServices">

        <div class="text-center">
            <h1 class="display-4">Bizagi OAuth2.0 Odata Service APIs</h1>
        </div>

        <div class="row spacer-25"></div>

        <div class="row">
            <div class="col-md-3 flex-fill"><button id="btnGetProcesses" class="btn btn-info">Get Processes</button></div>
            <div class="col-md-3 flex-fill"><button id="btnGetActiveCases" class="btn btn-danger">Get Active Cases</button></div>
            <div class="col-md-3 flex-fill"><button id="btnListAllCaseWorkItems" class="btn btn-warning">List All Case Work Items</button></div>
        </div>

        <div class="row spacer-25"></div>

        <div class="row">            
            <div class="col-md-3 flex-fill"><button id="btnGetProcessDetails" class="btn btn-info">Process Details</button></div>
            <div class="col-md-3 flex-fill"><button id="btnGetProcessActions" class="btn btn-danger">Process Actions</button></div>
        </div>

        <div class="row spacer-25"></div>

        <div class="row">
            <div class="col-md-4 flex-fill"><input id="txtProcessId" type="text" placeholder="Process Id" /></div>
            <div class="col-md-4 flex-fill"><input id="txtCaseId" type="text" placeholder="Case Id" /></div>
            <div class="col-md-4 flex-fill"><input id="txtWorkItemId" type="text" placeholder="WorkItem Id" /></div>
        </div>

        <div class="row spacer-25"></div>

        <div class="row">

            <div class="col-md-6">
                <div class="row m-2">
                    <div class="col-md-2"><button id="btnLink1" class="btn btn-info btn-bizagi w-100" value="/odata/data/processes">Get</button></div>
                    <div class="col-md-10"><a class="nav-link">/odata/data/processes</a></div>
                </div>

                <div class="row m-2">
                    <div class="col-md-2"><button id="btnLink2" class="btn btn-info btn-bizagi w-100" value="/odata/data/cases">Get</button></div>
                    <div class="col-md-10"><a class="nav-link">/odata/data/cases</a></div>
                </div>

                <div class="row m-2">
                    <div class="col-md-2"><button id="btnLink3" class="btn btn-info btn-bizagi w-100" value="/odata/data/processes({0})">Get</button></div>
                    <div class="col-md-10"><a class="nav-link">/odata/data/processes({0})</a></div>
                </div>

                <div class="row m-2">
                    <div class="col-md-2"><button id="btnLink4" class="btn btn-info btn-bizagi w-100" value="/odata/data/processes({0})/cases({1})">Get</button></div>
                    <div class="col-md-10"><a class="nav-link">/odata/data/processes({0})/cases({1})</a></div>
                </div>

                <div class="row m-2">
                    <div class="col-md-2"><button id="btnNew" class="btn btn-danger w-100" value="/odata/data/processes({0})/start">Post</button></div>
                    <div class="col-md-10"><a class="nav-link">/odata/data/processes({0})/start</a></div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="row m-2">
                    <div class="col-md-2"><button id="btnLink6" class="btn btn-info btn-bizagi w-100" value="/odata/data/processes({0})/actions">Get</button></div>
                    <div class="col-md-10"><a class="nav-link">/odata/data/processes({0})/actions</a></div>
                </div>

                <div class="row m-2">
                    <div class="col-md-2"><button id="btnLink7" class="btn btn-info btn-bizagi w-100" value="/odata/data/casesWithWorkitems">Get</button></div>
                    <div class="col-md-10"><a class="nav-link">/odata/data/casesWithWorkitems</a></div>
                </div>

                <div class="row m-2">
                    <div class="col-md-2"><button id="btnLink8" class="btn btn-info btn-bizagi w-100" value="/odata/data/processes({0})/cases({1})/workitems">Get</button></div>
                    <div class="col-md-10"><a class="nav-link">/odata/data/processes({0})/cases({1})/workitems</a></div>
                </div>

                <div class="row m-2">
                    <div class="col-md-2"><button id="btnLink9" class="btn btn-info btn-bizagi w-100" value="/odata/data/stuff">Get</button></div>
                    <div class="col-md-10"><a class="nav-link">/odata/data/stuff</a></div>
                </div>

                <div class="row m-2">
                    <div class="col-md-2"><button id="btnLink10" class="btn btn-info btn-bizagi w-100" value="/odata/data/processesByUser">Get</button></div>
                    <div class="col-md-10"><a class="nav-link">/odata/data/processesByUser</a></div>
                </div>

                <div class="row m-2">
                    <div class="col-md-2"><button id="btnLink11" class="btn btn-info btn-bizagi w-100" value="/odata/data/processes({0})/cases({1})/workitems({2})/relatedEntities">Get</button></div>
                    <div class="col-md-10"><a class="nav-link">/odata/data/processes({0})/cases({1})/workitems({2})/relatedEntities</a></div>
                </div>
            </div>

        </div>
                   

        <div class="row spacer-25"></div>

        <div class="row">
            <div class="col-md-6"><input id="txtUrl" type="text" class="form-control" placeholder="Odata Service Url" /></div>
            <div class="col-md-3"><button id="btnExecuteApi" class="btn btn-warning">Execute API</button></div>
            <div class="col-md-3"><button id="btnNext" class="btn btn-danger">Next</button></div>
        </div>

        <div class="row spacer-25"></div>

        <div class="row">

            <div class="col-md-6">
                <textarea id="txtJsonResult" rows="8" class="w-100" placeholder="Result"></textarea>
            </div>

            <div class="col-md-6">
                <textarea id="txtJsonBody" rows="8" class="w-100" placeholder="Request Parameters For Post"></textarea>
            </div>

        </div>

    </div>